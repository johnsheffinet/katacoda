# 02 - Deploy Containers with Kubectl
# Step 0 - Create Cluster
minikube version && \
minikube start --wait && \
minikube status

kubectl version --short && \
kubectl wait --for=condition=ready no/minikube && \
kubectl cluster-info && \
kubectl get cs,no

